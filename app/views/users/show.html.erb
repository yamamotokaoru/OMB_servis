

  
  <%= month_calendar events: @blogs do |date, blogs| %>
    <%= date.day %>
  
    <% blogs.each do |blog| %>
      <div>
        <%= link_to blog.title, blog %>
      </div>
    <% end %>
  <% end %>


  <% @blogs.each do |blog| %>
    <br><%= link_to blog.title,blog_path(blog.id) %>
    <br><%= blog.body %>
    <br><% blog.tag_list.each do |tag| %>
      <br><%= link_to tag, blogs_path(tag_name: tag), class: "text-white"%>
    <% end %>
    <br><%= link_to "削除", blog_path(blog), method: :delete %>
  <% end %>
