<%= form_for(@blog) do |f| %>

 <h4>タイトル</h4>
 <%= f.text_field :title %>

 <h4>本文</h4>
 <%= f.text_area :body %>

 <%= f.label :start_time %>
 <%= f.datetime_select :start_time %>

 <%= f.label :tag_list %>
 <%= f.text_field :tag_list, value: @blog.tag_list.join(',') %>

 <h4>住所</h4>
 <%= f.text_field :address, placeholder: "住所" %>

  <label>ステータス</label><br>
  <%= f.select :status, [["非公開", "draft"],["公開", "published"]], id: "status" %>
</div>

 <h4>画像</h4>
 <%= f.file_field :image,id: :user_img %>
   <% if @blog.image.present? %>
     <%= image_tag @blog.image, id: :img_prev %>
   <% else %>
     <%= image_tag "sample.png", id: :img_prev %>
   <% end %>


   <script type="text/javascript">
     $(function() {
       function readURL(input) {
           if (input.files && input.files[0]) {
           var reader = new FileReader();
           reader.onload = function (e) {
       $('#img_prev').attr('src', e.target.result);
           }
           reader.readAsDataURL(input.files[0]);
           }
       }
       $("#user_img").change(function(){
         readURL(this);
       });
     });
   </script>

 <br><%= f.submit '投稿' %>

<% end %>